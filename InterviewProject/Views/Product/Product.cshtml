@model IEnumerable<InterviewProject.Models.Product>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Create New Product
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-primary">Create New Product</a>
        </div>
        <br /><br />

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Product Start Date
                        </th>
                        <th>
                            Product Price
                        </th>
                        <th>
                            Product Quantity
                        </th>
                        <th>
                            Product Content
                        </th>
                        <th>
                            Product City ID
                        </th>
                        <th>
                            Product Country ID
                        </th>
                        <th>
                            Product Media ID
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.StartDate</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@item.Content</td>
                            <td>@item.City_Id</td>
                            <td>@item.Country_Id</td>
                            <td>@item.Media_Id</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="EditProduct" asp-route-Id="@item.Id" class="btn btn-outline-primary mx-2">Edit</a>
                                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-Id="@item.Id" class="btn btn-outline-danger mx-2">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No product exist</p>
        }
    </div>
</div>

