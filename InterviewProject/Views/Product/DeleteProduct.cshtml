@model InterviewProject.Models.Product
@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="DeleteProductConfirmation" method="post">
    <input  asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info pl-3">Delete Product</h2>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" placeholder="Enter Name" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StartDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StartDate" disabled class="form-control" placeholder="Enter Product Start Date" />                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" placeholder="Enter Product Price" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Quantity"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Quantity" disabled class="form-control" placeholder="Enter Product Quantity" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Content"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Content" disabled class="form-control" placeholder="Enter Product Content" />                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="City_Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City_Id" disabled class="form-control" placeholder="Enter Product City ID" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Country_Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Country_Id" disabled class="form-control" placeholder="Enter Product Country ID" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Media_Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Media_Id" disabled class="form-control" placeholder="Enter Product Media ID" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit"  class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Product" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

